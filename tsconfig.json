{
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true,
		"emitDeclarationOnly": true,
		"target": "esnext",

		"lib": ["esnext"],
		"types": ["node"],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	}
}
