{
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "esnext",

		"lib": ["ESNext"],
		"types": ["node"],

		"allowJs": true,

		"declaration": true,
		"declarationMap": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	}
}
