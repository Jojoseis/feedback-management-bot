{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "esnext",

		"lib": ["esnext"],
		"types": ["node"],

		"declaration": true,
		"declarationMap": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	}
}
