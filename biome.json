{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 150,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noInferrableTypes": "warn",
				"noMagicNumbers": "warn",
				"useConsistentArrayType": {
					"level": "warn",
					"options": {
						"syntax": "generic"
					}
				},
				"useArrayLiterals": "warn",
				"useAsConstAssertion": "warn",
				"useConst": "warn",
				"useTemplate": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
